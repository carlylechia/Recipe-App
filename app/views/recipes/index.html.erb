<h1>My Recipes <span><%= current_user.recipes_count %></span></h1>

  <div class="container">
    <% @recipes.each do |recipe| %>
      <% if recipe.user_id === current_user.id %>
        <div class="recipe mx-5 w-80">
          <div class="sub">
            <h2><%= recipe.name %></h2>
            <span>
              <%= link_to 'Details', recipe %>
              <%= link_to 'Edit', edit_recipe_path(recipe) %>
              <%= link_to 'Delete', recipes_delete_url(recipe), method: :delete, class: 'delete', data: { confirm: 'Are you sure?' } %>
            </span>
          </div>
          <p class="desc"><%= recipe.description %></p>
        </div>
      <% end %>
    <% end %>
    <div class="mx-5">
<%= link_to 'New Recipe', new_recipe_path, :class => 'btn btn-success text-center d-block w-100 mx-auto' %>
  </div>
</div>


