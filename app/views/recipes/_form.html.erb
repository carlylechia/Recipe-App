<div class="form">
  <%= form_with(model: recipe) do |form| %>
    <% if recipe.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>

        <ul>
          <% recipe.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

      <div class="form-group">
        <%= form.text_field :name, size:"73x10", placeholder:"Recipe Name", class: "form-control"%>
      </div>
      <div class="form-group">
        <%= form.text_field :preparation_time, placeholder:"Preparation Time", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= form.text_field :cooking_time, placeholder:"Cooking Time", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= form.text_area :description, size:"34x5", placeholder:"Recipe Descrption", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= form.check_box :public%>
        <%= form.label :public %>
      </div>
      <%= form.submit "Submit New Recipe", class: "form-control btn btn-success"%>
    <% end %>
</div>
