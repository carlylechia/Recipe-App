<section>
<h2 class="food-header">Ingredients</h2>
<div class="table-wrapper">
    <table class="fl-table">
        <thead>
        <tr>
            <th>Food</th>
            <th>Quantity</th>
            <th>Value</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        <% if @ingredients %>
        <% @ingredients.each do |item| %>
                <tr>
                    <td><%=item.foods.name%></td>
                    <td><%=item.quantity%></td>
                    <td>$ <%=item.foods.price%></td>
                    <% if item.recipe.user_id === current_user.id %>
                      <td>
                        <%= button_to "Modify", edit_recipe_ingredients_path(item), class: "btn-delete" %>
                        <%= button_to "Delete", recipe_ingredients_path(item.id), method: :delete, 
                            data: {confirm: 'Are you sure?'}, class: "btn-delete" %>
                      </td>
                    <%end%>
                </tr>
        <%end%>
        <%end%>
        <tbody>
    </table>
</div>
</section>